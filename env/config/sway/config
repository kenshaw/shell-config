# -----[ vars ]-------------------------------
set {
  $left   d
  $down   h
  $up     t
  $right  n
  $cursor 48
  $resize 40px
  $move   40px
  $mod    Mod4
  $shf    $mod+Shift
}

# -----[ input ]------------------------------
input * {
  xkb_layout    us
  xkb_variant   dvorak
  xkb_numlock   enable
  xkb_options   caps:escape
  # key repeat
  repeat_rate   75
  repeat_delay  250
  # mouse scroll
  scroll_factor 4.5
}

# ----[ fixed outputs, background ]-----------
output {
  DP-1 pos 0 0
  DP-3 pos 3840 0
  *    bg  ~/Pictures/backgrounds/mojave-night.jpg fill
}

# ----[ basic config ]------------------------
bar                     swaybar_command waybar
font                    pango:sans-serif Medium 26
workspace_layout        tabbed
default_floating_border none
floating_modifier       $mod normal

# ----[ inhibit idle on fullscreen ]----------
for_window {
  [class=".*"]  inhibit_idle fullscreen
  [app_id=".*"] inhibit_idle fullscreen
}

# -----[ seat config ]------------------------
seat seat0 xcursor_theme Adwaita $cursor

# ----[ gtk settings ]------------------------
exec {
  gsettings set org.gnome.desktop.interface gtk-theme Adwaita-dark
  gsettings set org.gnome.desktop.interface.wm.preferences theme Adwaita-dark
  gsettings set org.gnome.desktop.interface icon-theme Numix-Circle
  gsettings set org.gnome.desktop.interface cursor-size $cursor
  gsettings set org.gnome.desktop.interface font-name 'sans-serif Medium 26'
  gsettings set org.gnome.desktop.interface monospace-font-name 'InconsolataLGC Nerd Font Mono 16'
}

# -----[ notifications ]----------------------
exec {
  mako
#  swayidle -w \
#    timeout 300 'swaylock -f -c 000000' \
#    timeout 310 'swaymsg "output * dpms off"' \
#    resume 'swaymsg "output * dpms on"' \
#    before-sleep 'swaylock -f -c 000000'
}

# -----[ general key binds ]------------------
bindsym {
  # sway
  $shf+c reload
  $mod+r mode resize
  $shf+x exec swaynag -t warning -m 'Exit Sway?' -B 'Yes, exit sway' 'swaymsg exit'
  $mod+w kill
  Alt+F4 kill
  $mod+f fullscreen

  # toggle/swap focus from tiling/floating mode
  $mod+space focus    mode_toggle
  $shf+space floating toggle

  # launch/exec
  $mod+Return exec foot --working-directory=$(~/src/shell-config/sway/current-dir.sh)
  $mod+m      exec wofi --show drun --allow-images
  Ctrl+F1     exec swayreorder
  $mod+a      exec nautilus --new-window $(~/src/shell-config/sway/current-dir.sh)
  Pause       exec bash ~/src/shell-config/sway/lock.sh

  # audio/volume
  XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
  XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
  XF86AudioMute        exec wpctl set-mute   @DEFAULT_AUDIO_SINK@ toggle

  # emoji
  $mod+e exec rofimoji --skin-tone light
  $shf+e exec rofimoji --skin-tone light --action copy

  # focus/move
  $mod+$left  focus left
  $mod+$down  focus down
  $mod+$up    focus up
  $mod+$right focus right
  $shf+$left  move  left  $move
  $shf+$down  move  down  $move
  $shf+$up    move  up    $move
  $shf+$right move  right $move
  # change workspace
  $mod+1 workspace number 1
  $mod+2 workspace number 2
  $mod+3 workspace number 3
  $mod+4 workspace number 4
  $mod+5 workspace number 5
  $mod+6 workspace number 6
  $mod+7 workspace number 7
  $mod+8 workspace number 8
  $mod+9 workspace number 9
  $mod+0 workspace number 10
  # move to workspace
  $shf+1 move container to workspace number 1
  $shf+2 move container to workspace number 2
  $shf+3 move container to workspace number 3
  $shf+4 move container to workspace number 4
  $shf+5 move container to workspace number 5
  $shf+6 move container to workspace number 6
  $shf+7 move container to workspace number 7
  $shf+8 move container to workspace number 8
  $shf+9 move container to workspace number 9
  $shf+0 move container to workspace number 10

## split
#  $mod+b splith
#  $mod+v splitv
## switch layout styles
#  $mod+s layout stacking
#  $mod+w layout tabbed
#  $mod+e layout toggle split
## Move the currently focused window to the scratchpad
#  $shf+minus move scratchpad
## Show the next scratchpad window or hide the focused scratchpad window.
## If there are multiple scratchpad windows, this command cycles through them.
#  $mod+minus scratchpad show
}

# -----[ resize ]-----------------------------
mode resize bindsym {
  $left  resize shrink width  $resize
  $down  resize grow height   $resize
  $up    resize shrink height $resize
  $right resize grow width    $resize
  Return mode default
  Escape mode default
}

for_window [app_id="^org\.gnome\.(Calculator|Nautilus)$"] \
  floating enable

for_window [app_id="eog"] \
  floating enable, \
  resize set 2800 2000, \
  move position centered

for_window [class="[vV]ivaldi.*"] \
  floating enable, \
  resize set 3380 2000, \
  move container to workspace 1, \
  move position 20 20

for_window [class=".*[cC]hrom.*"] \
  floating enable, \
  resize set 3380 2000, \
  move container to workspace 1, \
  move position 20 20

for_window [app_id="pavucontrol"] \
  floating enable, \
  resize set 1200 800

for_window [class=".*[tT]elegram.*"] \
  floating enable, \
  resize set 2400 1800

