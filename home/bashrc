[ -d "$HOME/.npm-global/bin" ] && \
  PATH=$PATH:$HOME/.npm-global/bin

# ----[ pnpm global path ]------------------------------------
[ -d "$HOME/.local/share/pnpm" ] && \
  PATH=$PATH:$HOME/.local/share/pnpm PNPM_HOME=$HOME/.local/share/pnpm

# ----[ dart path ]-------------------------------------------
[ -d "$HOME/.pub-cache/bin" ] && \
  PATH=$PATH:$HOME/.pub-cache/bin

