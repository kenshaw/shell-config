        "keyword": "",
        "method": "",
        "module": "󰙅",
        "operator": "",
        "property": "",
        "reference": "󰍻",
        "snippet": "󰆏",
        "struct": "",
        "text": "",
        "typeParameter": "󰈩",
        "unit": "",
