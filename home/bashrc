[ -d /opt/homebrew/opt/ruby/bin ] && \
  PATH=/opt/homebrew/opt/ruby/bin:$PATH

# ----[ vmware credentials ]----------------------------------
[ -f $HOME/notes/mkp/vmware.sh ] && \
  source $HOME/notes/mkp/vmware.sh

# ----[ gam ]-------------------------------------------------
[ -d $HOME/src/sdk/gam7 ] && \
  PATH=$PATH:$HOME/src/sdk/gam7
