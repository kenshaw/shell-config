[color]
	ui = auto
[core]
	excludesFile = ~/.gitignore
	autocrlf = input
	attributesFile = ~/.gitattributes
[init]
	defaultBranch = master
[branch]
	autoSetupRebase = always
[push]
	default = simple
[pull]
	rebase = true
[tag]
	sort = version:refname
[http]
	cookieFile = ~/.gitcookies
[alias]
	lg = log
[grep]
	fullname = true
[icdiff]
	options = --line-numbers
[includeIf "gitdir:~/src/"]
	path = ~/.gitconfig-me
[includeIf "gitdir:~/src/go/src/github.com/brankas/"]
	path = ~/.gitconfig-brankas
[includeIf "gitdir:~/src/go/src/brank.as/"]
	path = ~/.gitconfig-brankas
[includeIf "gitdir:~/src/go/src/brankas.dev/"]
	path = ~/.gitconfig-brankas
[includeIf "gitdir:~/src/go/src/src.dog/"]
	path = ~/.gitconfig-srcdog
[includeIf "gitdir:~/src/go/src/r*"]
	path = ~/.gitconfig-r
[includeIf "gitdir:~/src/go/src/xo/"]
	path = ~/.gitconfig-xo
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[advice]
	addIgnoredFile = false
[safe]
	directory = /usr/local/go
