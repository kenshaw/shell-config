{
    "coc.preferences.formatOnSaveFiletypes": [
        "css", 
        "go",
        "haxe",
        "javascript",
        "markdown"
    ],
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "go.goplsOptions": {
        "completeUnimported": true,
        "gofumpt": true, 
        "hoverKind": "SynopsisDocumentation",
        "linksInHover": false
    },
    "languageserver": {
        "bash": {
          "command": "bash-language-server",
          "args": ["start"],
          "filetypes": ["sh"],
          "ignoredRootPaths": ["~"]
        }
    },
