#[ -S "$XDG_RUNTIME_DIR/podman/podman.sock" ] && \
#  DOCKER_HOST=unix://$XDG_RUNTIME_DIR/podman/podman.sock

# ----[ podman host ]-----------------------------------------
[ -d /usr/local/osx-ndk-x86/bin ] && \
  PATH=$PATH:/usr/local/osx-ndk-x86/bin

